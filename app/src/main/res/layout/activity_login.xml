<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

        <EditText
            android:id="@+id/passworld"
            android:layout_width="255dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="Veuillez informer votre mot de passe"
            android:inputType="textEmailAddress"
            android:textColor="#1976D2"
            android:textStyle="normal|italic"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="286dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/passworld_text"
            android:layout_width="352dp"
            android:layout_height="46dp"
            android:background="#FFFFFF"
            android:text="Mot de passe:"
            android:textSize="25sp"
            android:textStyle="normal|italic"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="211dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="352dp"
            android:layout_height="46dp"
            android:background="#FFFFFF"
            android:text="Adresse email:"
            android:textSize="25sp"
            android:textStyle="normal|italic"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="62dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/email_adress"
            android:layout_width="255dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="Veuillez informer votre adresse email"
            android:inputType="textEmailAddress"
            android:textColor="#1976D2"
            android:textStyle="normal|italic"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="126dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/inscription"
            android:layout_width="225dp"
            android:layout_height="75dp"
            android:backgroundTint="#1976D2"
            android:text="S'inscrire"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="554dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/connection"
            android:layout_width="225dp"
            android:layout_height="75dp"
            android:backgroundTint="#1976D2"
            android:text="Se connecter"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="459dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>