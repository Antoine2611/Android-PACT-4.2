<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <RelativeLayout
        android:id="@+id/bande_evenement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700">

        <RelativeLayout
            android:id="@+id/image_bande_mon_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/teal_700">

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_bande_mon_profil"
            android:layout_centerHorizontal="true"
            android:text="Evènements"
            android:textSize="36sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bande_evenement">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evènements à venir"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenge Centrale"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evènements passés"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coupe de l'X"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="20dp"/>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>